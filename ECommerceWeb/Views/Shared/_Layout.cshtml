@using ECommerce.Tables.Utility.System
@using Volume.Web.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TODO: application name</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/styles")
    @Scripts.Render("~/bundles/modernizr")

    <!-- TODO: bundle this instead. -->
    <link rel="stylesheet" href="~/fonts/font-awesome/css/font-awesome.min.css" media="screen" />

</head>
<body>
    @* @Html.Partial("_MaintenanceMessagePartial", new MaintenanceMessageModel(Config.MaintenanceDeliveryUtcDate, Config.MaintenanceMsgHideAfterMins)) *@
    @Html.Partial("_MaintenanceMessagePartial", new MaintenanceMessageModel(Config.MaintenanceDeliveryDate, Config.MaintenanceMsgHideAfterMins))
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TODO: application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", null, new { href = "#" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", null, new { href = "#" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer class="navbar-fixed-bottom">
            <hr />
            <p style="margin-left: 20px;">&copy; @DateTime.Now.Year - Achintha Premarathne</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toolkit")
    @Scripts.Render("~/bundles/application")
    @RenderSection("scripts", required: false)
    <script>

            //var helpIconMessages = new Array();

            $(document).ready(
				function() {
					app.validation('@HttpUtility.JavaScriptStringEncode(Resources.Common.Validation.ErrorMultipleInvalidFields)').initialiseUnobtrusiveIconValidation();

				/*
				function () {
                    app.global.ui.general.initialiseUnobtrusiveIconValidation();
                }*/
				}
            );



    </script>
</body>
</html>
