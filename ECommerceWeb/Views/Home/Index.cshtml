@using ECommerceWeb.Common
@using ECommerceWeb.Models.Home
@model IList<ECommerceWeb.Models.Home.TopSellingProductViewModel>

@{
    ViewBag.Title = (ViewBag.IsAdmin) ? "Admin Home Page" : "User Home Page";
}

<h2>@ViewBag.Title</h2>

<hr />

@if (ViewBag.IsAdmin)
{
    <h4 style="margin-top: 30px;">Quick Links</h4>

    <div class="row" style="margin-top: 15px;">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">Manage Categories</div>
                <div class="panel-body">
                    <ul>
                        <li>@Html.ActionLink("Add", Constants.ACTION_ADD, Constants.CONTROLLER_CATEGORY)</li>
                    </ul>
                    <ul>
                        <li>@Html.ActionLink("View List", Constants.ACTION_LIST, Constants.CONTROLLER_CATEGORY)</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">Manage Products</div>
                <div class="panel-body">
                    <ul>
                        <li>@Html.ActionLink("Add", Constants.ACTION_ADD, Constants.CONTROLLER_PRODUCT)</li>
                    </ul>
                    <ul>
                        <li>@Html.ActionLink("View List", Constants.ACTION_LIST, Constants.CONTROLLER_PRODUCT)</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">Manage Users</div>
                <div class="panel-body">
                    <ul>
                        <li></li>
                    </ul>
                    <ul>
                        <li></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <h4 style="margin-top: 30px;">Reports</h4>

    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">

                    <h3 class="panel-title pull-left" style="margin-top: 7px;">Top Selling Products</h3>

                    <div class="input-group pull-right">
                        <label for="FilterBy">Filter by : &nbsp;</label>
                        @Html.DropDownList("FilterBy", new SelectList(ViewBag.FilterList as List<SelectListItem>, "Value", "Text", ViewBag.selectedCategoryID),
     htmlAttributes: new { @class = "btn btn-default dropdown-toggle", @onchange = "TopSellingFilterBy(this.value)", @style = "" })
                    </div>

                </div>
                <div class="panel-body" style="height: 400px; overflow-y: scroll;">

                    @if (ViewBag.listCount == 0)
                    {
                        <div style="text-align: center; margin-top: 20px;">
                            <img src="~/Filestore/Images/no_data.png" alt="NO_Data" />
                        </div>
}
                    else
                    {
                        TempData["ReportData1"] = Model;
                        using (Html.BeginForm(Constants.ACTION_EXPORT_TO_EXCEL, Constants.CONTROLLER_HOME, new { @name = "ReportData1" }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken();
                            <input type="submit" value="Export to Excel" class="btn btn-default pull-right" style="margin-bottom: 14px; padding: 3px;" />
}

                        <table class="table table-striped" style="vertical-align: middle;">
                            <tr>
                                <th class="col-md-1">
                                    #
                                </th>
                                <th class="col-md-3">
                                    Product Name
                                </th>
                                <th class="col-md-2">
                                    Image
                                </th>
                                <th class="col-md-1">
                                    Price
                                </th>
                                <th class="col-md-1">
                                    Sellings
                                </th>
                            </tr>

                            @{ int i = 0; }
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td style="text-align:center;">
                                        #@i
                                    </td>
                                    <td style="text-align:center;">
                                        @item.Name
                                    </td>
                                    <td style="text-align:center;">
                                        <img src="@Url.Content(item.ImageSrc)" alt="Image" style="width: 100px;" />
                                    </td>
                                    <td style="text-align:center;">
                                        @Func.Currencyfy(item.Price)
                                    </td>
                                    <td style="text-align:center;">
                                        @item.Sellings
                                    </td>
                                </tr>
                            }

                        </table>}

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">

                    @*<h3 class="panel-title pull-left" style="margin-top: 7px;">Search Product</h3>*@

                    <div class="input-group pull-left">
                        @*@Html.DropDownList("ProductList", new SelectList(ViewData["ProductSearchList"] as List<SelectListItem>, "Value", "Text"), "Select a Product",
                            htmlAttributes: new { @class = "btn btn-default", data_show_subtext = "true", data_live_search = "true", onchange = "", style = "margin-bottom: 10px; margin-top: 7px;" })*@

                        <span class="clearable">
                            <input type="text" list="products" class="btn" style="width: 226px; border-color: #ccc; text-align: left;" id="product_list" name="product_list" />
                            <i class="clearable__clear">&times;</i>
                        </span>

                        <datalist id="products">

                            @{  List<SelectListItem> list = ViewData["ProductSearchList"] as List<SelectListItem>;
                                foreach (SelectListItem item in list)
                                {
                                    <option data-value="@item.Value">@item.Text</option>
                                }
                            }
                        </datalist>

                    </div>

                    <button class="btn btn-default pull-right" onclick="SearchProduct()">Search <i class="glyphicon glyphicon-search"></i></button>

                </div>
                <div class="panel-body" style="height: 400px; overflow-y: scroll; text-align: left;">

                    @{  TopSellingProductViewModel      selectedProduct     = ViewData["SelectedProduct"] as TopSellingProductViewModel;
                        List<TopSellingProductViewModel> tempList = new List<TopSellingProductViewModel>();
                        tempList.Add(selectedProduct);

                        if (selectedProduct != null)
                        {
                            TempData["ReportData2"] = tempList;
                            using (Html.BeginForm(Constants.ACTION_EXPORT_TO_EXCEL, Constants.CONTROLLER_HOME, new { @name = "ReportData2" }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken();
                                <input type="submit" value="Export to Excel" class="btn btn-default pull-right" style="margin-bottom: 14px; padding: 3px;" />
                            }

                            <br /><br />

                            <img src="@Url.Content(selectedProduct.ImageSrc)" alt="Image" style="height: 100px; padding:1px; /*border:1px solid #021a40; */background-color:#ccc;" />
                            <br /><br />

                            <label>Name: </label>
                            <text>@selectedProduct.Name</text>
                            <br />

                            <label>Price: </label>
                            <text>@Func.Currencyfy(selectedProduct.Price)</text>
                            <br />

                            <label>Sellings: </label>
                            <text>@selectedProduct.Sellings</text>
                            <br />

                        }
                        else
                        {
                            <div style="text-align: center; margin-top: 10px;">
                                <img src="~/Filestore/Images/cloud_search.png" style="height: 140px;" alt="NO_Data" />
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    </div>

}
else
{

}